include _mixins

article.o-article(class=(image && image.display == false) ? "o-article--full" : "o-article--" + ((wide) ? "narrow" : "wide"))

    //- Art-directed posts
    //- Article header

    if artdirected
        !=yield

    else

    header.o-article__header
        a(href="/" aria-label="Home")
            !=partial("_includes/_logo", { size: 125 })

        h1
            span.u-heading-1.u-text-upper=headline

            if date
                .o-inline-list.u-text-meta
                    if category
                        strong.u-text-upper=category

                    +date(date)

                    !=partial("_includes/_share-icons", { posturl: getCurrentUrl() })

    if image && image.display != false

        //- Hero Image

            .article-hero(class="article-hero--" + ((wide) ? "wide" : "narrow") style="background-image: url(" + ((current.path[0] == "blog") ? "/blog/img/" : "/assets/img/") + image.file + ")")

            if image.credit_text
                +a(image.credit_url).c-hero__credit.u-text-meta-small=image.credit_text

    //- Article content

    .o-article__content
        !=yield

        if meta
            p.u-text-meta=meta

                    +button(href=readmore target="_blank") Read more
        if readmore
            p

//- Latest Posts

.o-box
    h2.o-box__header.u-heading-2 Latest Posts

    !=partial("_includes/_latest-posts", { posts: 3 })
